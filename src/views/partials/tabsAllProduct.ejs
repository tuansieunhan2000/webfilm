<script type="text/javascript" src="../js/jquery.min.js"></script>
<script type="text/javascript" src="../js/jquery.simplePagination.js"></script>
<section class="py-3 allProduct">

    <div class="container py-4">
        <div class="row">
            <div class="col-md-3">
                <!-- Tabs nav -->
                <div class="nav flex-column nav-pills nav-pills-custom" id="v-pills-tab" role="tablist" aria-orientation="vertical">

                    <a class="nav-link mb-2 shadow active" id="v-pills-all-tab" data-toggle="pill" href="#v-pills-all" role="tab" aria-controls="v-pills-all" aria-selected="true">
                        <span class="font-weight-bold small text-uppercase" style="color:#3a6073;">List Films</span></a>
                        
                    <% var count=0 %> 
                    <%countArrCate.forEach(function(data) { %>
                        <a class="nav-link mb-2 shadow" id="v-<%=data %>-tab" data-toggle="pill" href="#v-<%=data %>" role="tab" aria-controls="v-<%=data %>" aria-selected="false">
                            <span class="font-weight-bold small text-uppercase" style="color:#3a6073;"><%= nameArrCate[count]%></span>
                        </a>
                        <% count++ %>
                        
                    <% }) %> 
                </div>
            </div>

            <div class="col-md-9">
                <!-- Tabs content -->
                <div class="tab-content" id="v-pills-tabContent">
                    <!--  -->
                    <div class="tab-pane fade shadow rounded bg-white show active p-4" id="v-pills-all" role="tabpanel" aria-labelledby="v-pills-all-tab">
                        <h4 class="font-italic mb-4">List Films</h4>
                        <div class="row list-wrapper">
                            <%products.forEach(function(data) { %>

                            <div class="col-lg-4 col-sm-6 col-xs-12 list-item">
                                <div class="item" href="#">
                                    <div class="img-hover-zoom " >  
                                          <img src="../img/<%=data.image%>" class="w-80" alt="This zooms-in really well and smooth">
                                    </div>
                                    <div class="content text-center">
                                    <span class="name"><%=data.name%></span>
                                 
                                    <p><%=data.category.name%></p>

                                    <button class="button "><a href="/layout/product-detail/?key=<%=data._id%>" style=" text-decoration: none ;color:#3a6073;" >Xem phim </a></button>
                                </div>
                                </div>
                            </div>
                            <% }); %>       

                        </div>
                        <div id="pagination-container" ></div>
                    </div>
                    <% var count = 0; countArrCate.forEach(elementArrCate => { %>
                         
                        <div class="tab-pane fade shadow rounded bg-white p-4" id="v-<%=elementArrCate%>" role="tabpanel" aria-labelledby="v-<%=elementArrCate%>-tab">
                            <h4 class="font-italic mb-4"><%= nameArrCate[count]%></h4>
                            <div class="row ">

                                <%products.forEach(function(data) { %>
                                    <% if(data.category.id == elementArrCate){ %>
                                        <!--  -->
                                        <div class="col-lg-4 col-sm-6 col-xs-12 ">
                                            <div class="item" href="#">
                                                <div class="img-hover-zoom " >  
                                                    <img src="../img/<%=data.image%>" class="w-80" alt="This zooms-in really well and smooth">
                                                </div>
                                                <div class="content text-center">
                                                <span class="name"><%=data.name%></span>
                                                <p><%=data.category.name%></p>

                                                <button class="button text-dark"><a href="/layout/product-detail/?key=<%=data._id%>" style="color:#3a6073; text-decoration: none ;">Xem phim</a></button>
                                            </div>
                                            </div>
                                        </div>
                                    <% } %>

                                <% }); %> 

                            </div>

                          
                        </div>
                        <% count++ %> 
                    <% }); %>
                    <!--  -->
                </div>
                <!-- end tab content -->
            </div>
        </div>
    </div>
</section>
<style>


    .simple-pagination ul {
        margin: 0 0 20px;
        padding: 0;
        list-style: none;
        text-align: center;
    }
    
    .simple-pagination li {
        display: inline-block;
        margin-right: 5px;
    }
    
    .simple-pagination li a,
    .simple-pagination li span {
        color: #666;
        padding: 5px 10px;
        text-decoration: none;
        border: 1px solid #EEE;
        background-color: #FFF;
        box-shadow: 0px 0px 10px 0px #EEE;
    }
    
    .simple-pagination .current {
        color: #3A6073;
      background: linear-gradient(230deg, rgba(245,159,159,1) 0%, rgba(247,193,155,1) 19%, rgba(255,254,148,1) 39%, rgba(171,246,155,1) 60%, rgba(143,245,255,1) 81%, rgba(228,147,227,1) 100%);
    font-weight: 600;
    }
    
    .simple-pagination .prev.current,
    .simple-pagination .next.current {
    
    color: #3A6073;
    font-weight: 600;
    
    
    }
   
      </style>
       
      <script>
        var items = $(".list-wrapper .list-item");
        var items1 = $(".list-wrapper1 .list-item1");


        var numItems = items.length;
        var perPage = 16;
    
    
        items.slice(perPage).hide();
 

    
        $('#pagination-container').pagination({
            items: numItems,
            itemsOnPage: perPage,
            prevText: "&laquo;",
            nextText: "&raquo;",
            onPageClick: function (pageNumber) {
                var showFrom = perPage * (pageNumber - 1);
                var showTo = showFrom + perPage;
                items.hide().slice(showFrom, showTo).show();
            }
        });
       
      </script>
    