                                                <tbody>
                                                  <%  if (categories.length ==0){ %>
                                                        <tr><td colspan="3">Empty</td></tr>
                                                        <%    }else { %>

                                                
                                                    <% var i =1; categories.forEach(function(data) { %>
                                                      <tr>
                                                         
                                                          <td scope="row"><%=i++ %></td>
                                                          <td><%=data.id %></td>
                                                          <td><%=data.name %></td>
                                                          <td><%=data.vn_name %></td>
                                                          <td><a   data-id="<%=data._id%>"  class="btn-restore-cat"
                                                             href="" title="restore"><i class="far fa-window-restore " ></i></a>
                                                    </td>
                                                        <td><a id="data._id" data-toggle="modal" title="delete" class="btn-force-delete-cat" 
