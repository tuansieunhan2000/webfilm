                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Xóa loại sản phẩm</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Bạn chắc chắn  muốn xóa loại sản phẩm này ?
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="btn-delete-cat" class="btn btn-primary">Delete</button>
                        <button type="button" class="btn btn-secondary " data-dismiss="modal">Close</button>

                    </div>
                </div>
            </div>
        </div>


    <style>
    </style>

<form name="form-delete" action="" method="POST"></form>
<form name="form-restore" action="" method="POST"></form>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var productID;
        var deleteForm = document.forms["form-delete"];
        var restoreForm = document.forms["form-restore"]
        var btnDelete = document.getElementById('btn-delete');
        var btnDeleteCat = document.getElementById('btn-delete-cat');
        var btnRestoreCat = $('.btn-restore-cat')
        var btnRestore = $('.btn-restore')

        $('#exampleModalLong').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            productID = button.data('id');
        });

        $('#exampleModalLongCat').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            categoryID = button.data('id');
        });
        btnDelete.onclick = function () {
            deleteForm.action = '/admin/delete/product/' + productID + '/force?_method=DELETE';
            deleteForm.submit();
        }
        btnDeleteCat.onclick = function () {
            deleteForm.action = '/admin/delete/category/' + categoryID + '/force?_method=DELETE';
            deleteForm.submit();
        }
        btnRestore.click(function (e) {
            e.preventDefault();
            var id = $(this).data('id');
            restoreForm.action = '/admin/restore/product/' + id + '?_method=PATCH';
            restoreForm.submit();
        })
        btnRestoreCat.click(function (e) {
            e.preventDefault();
            var id = $(this).data('id');
            restoreForm.action = '/admin/restore/category/' + id + '?_method=PATCH';
            restoreForm.submit();
        })
    });
</script>
