
  
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Login Dashboard</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="all,follow">
    <!-- Bootstrap CSS-->
    <link rel="stylesheet" href="/../vendor/bootstrap/css/bootstrap.min.css">

    <!-- Google fonts - Roboto -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700">
    <!-- jQuery Circle-->

    <!-- Custom Scrollbar-->
    <link rel="stylesheet" href="/../vendor/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
        integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w=="
        crossorigin="anonymous" />
    <!-- theme stylesheet-->
    <link rel="stylesheet" href="/../css/style.default.css" id="theme-stylesheet">
    <!-- Custom stylesheet - for your changes-->
    <link rel="stylesheet" href="/../css/custom.css">

</head>

<body>
    <%-include('../partials/sidebarAdmin.ejs')%>
        <div class="page">
            <%-include('../partials/headerAdmin.ejs')%>
                <section id="tabs" class="m-5">
                    <div class="container">
                        <h6 class="section-title h1">Category Control</h6>
                        <div class="row">
                            <div class="col-12 ">
                                <nav>
                                    <div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
                                        <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab"
                                            href="#nav-home" role="tab" aria-controls="nav-home"
                                            aria-selected="true">All Category</a>
                                        <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab"
                                            href="#nav-profile" role="tab" aria-controls="nav-profile"
                                            aria-selected="false">Add new Category</a>
                                    </div>
                                </nav>
                            <div class="row">
                                <div class="col-1"></div>
                                <div class="col-10">
                                    <div class="tab-content py-3 px-3 px-sm-0" id="nav-tabContent">
                                        <div class="tab-pane fade show active" id="nav-home" role="tabpanel"
                                            aria-labelledby="nav-home-tab">
                                            <table class="table">
                                                <thead class="thead-dark">
                                                    <tr>
                                                        <th>#</th>
                                                        <th>ID</th>
                                                        <th>Cagegory Name</th>
                                                        <th>VN Name</th>
                                                        <th></th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% var i =1; categories.forEach(function (data){%>
                                                        <tr>
                                                            <td scope="row"><span class="mt-2"><%= i++%></span></td>
                                                            <td class=""><span class="mt-2"><%=data.id%></span></td>
                                                            <td><span class="mt-2"><%=data.name%></span></td>
                                                            <td><span class="mt-2"><%=data.vn_name%></span></td>
                                                            <td>
                                                                <button  type="button" class="btn btn-link" onclick="updating('<%= data.id%>','<%= data.name %>','<%= data.vn_name%>')">
                                                                    <a id="<%= data._id%>" data-toggle="modal" data-target="#modalEdit"   href="">
                                                                        <i class="fas fa-edit"></i>
                                                                    </a>
                                                                </button>
                                                            
                                                            </td>
                                                            <script>
                                                                function updating(cateID, cateName, cateVn_name) {                        
                                                                    document.getElementById("idUp").value = cateID
                                                                    document.getElementById("nameUp").value = cateName
                                                                    document.getElementById("vn_nameUp").value = cateVn_name
                                                                }
                                                            </script>
                                                            <td><a id="<%=data._id%>" data-toggle="modal" data-id="<%=data._id%>" class="mt-2 "
                                                                    data-target="#exampleModalLong" href=""><i
                                                                        style="color: red;" class="fas fa-trash-alt"></i></a>
                                                            </td>
                                                        </tr>
                                                    <% })%>                                               
                                                </tbody>
                                            </table>
                                        </div>
                                        <div class="tab-pane fade" id="nav-profile" role="tabpanel"
                                            aria-labelledby="nav-profile-tab">
                                                        <div class="col-lg-12">
                <div class="card">
                    <div class="card-header d-flex align-items-center">
                        <h4>Điền thông tin </h4>
                    </div>
                    <div class="card-body">
                      <form class="form-horizontal" action="/admin/categoryInsert" method="POST">
                        <div class="form-group row">
                          <label class="col-3 form-control-" name>Tên tiếng việt</label>
                          <div class="col-9">
                            <input type="text" id="vn_name" name="vn_name" class="form-control">
                          </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-3 form-control-label">Tên tiếng anh</label>
                            <div class="col-9">
                              <input type="text" id="name" name="name" class="form-control">
                            </div>
                          </div>
    
     
    
                
    
                        <div class="form-group row">
                          <div class="col-6 offset-2">
                            <script>
                                function clear_add(){
                                    document.getElementById("name").value=""
                                    document.getElementById("vn_name").value=""
                                }
                            </script>
                            <button type="button" class="btn btn-secondary" onclick="clear_add()">Cancel</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>

                          </div>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
                                        </div>
    
                                    </div>
                                </div>
                                <div class="col-2"></div>

                            </div>

                            </div>
                        </div>
                    </div>
                </section>
        </div>

        <!-- Modal -->
        <!-- xoas category -->
        <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog"
            aria-labelledby="exampleModalLongTitle" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Xóa sản phẩm</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Bạn muốn xóa Category này ?
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="btn-delete" class="btn btn-primary">Delete</button>
                        <button type="button" class="btn btn-secondary " data-dismiss="modal">Close</button>

                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="modalEdit" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <!-- Cập nhật - chỉnh sửa thông tin -->
        <div class="modal-dialog modal-dialog-edit" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Chỉnh sửa thông tin</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal col-md-8" action="/admin/categoryUpdate/?_method=PUT" method="POST" >
                        <div class="form-group row">
                            <label class="col-3 form-control-label">Category ID</label>
                            <div class="col-9">
                              <input type="text" id="idUp" name="idUp" class="form-control">
                            </div>
                          </div>
                        <div class="form-group row">
                          <label class="col-3 form-control-label">Tên tiếng việt</label>
                          <div class="col-9">
                            <input type="text" id="vn_nameUp" name="vn_nameUp" class="form-control">
                          </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-3 form-control-label">Tên tiếng anh</label>
                            <div class="col-9">
                              <input type="text" id="nameUp" name="nameUp" class="form-control">
                            </div>
                          </div>
                          <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Save changes</button>
                            <button type="button" class="btn btn-secondary " data-dismiss="modal">Close</button>

                        </div>
                      </form>
                </div>
                
            </div>
        </div>
    </div>
    <form name="delete-form"  method="POST"></form>

    <script>
        document.addEventListener('DOMContentLoaded', function(){
            var categoryID;
            var btnDelete = document.getElementById('btn-delete');
            var deleteForm = document.forms['delete-form']
            //when dialog confirm clicked
            $('#exampleModalLong').on('show.bs.modal', function(event){
            var button = $(event.relatedTarget);
            categoryID = button.data('id')
        })
        btnDelete.onclick = function(){
            deleteForm.action='/admin/delete/category/'+categoryID+'?_method=DELETE';
            deleteForm.submit()
        }
        })
    
    </script>

        <!-- JavaScript files-->
        <script src="/../vendor/jquery/jquery.min.js"></script>
        <script src="/../vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="/../js/grasp_mobile_progress_circle-1.0.0.min.js"></script>
        <script src="/../vendor/jquery.cookie/jquery.cookie.js"> </script>
        <script src="/../vendor/chart.js/Chart.min.js"></script>
        <script src="/../vendor/jquery-validation/jquery.validate.min.js"></script>
        <script src="/../vendor/malihu-custom-scrollbar-plugin/jquery.mCustomScrollbar.concat.min.js"></script>
        <!-- Main File-->
        <script src="/../js/front.js"></script>
</body>

<style>
    .modal-dialog-edit{
        max-width: 756px;
    }
</style>
</html>
